<div class="flex justify-between w-full">
  <div class="flex flex-col w-2/4">
    <label for="name" class=" myFont mt-3 text-lg">Name</label>
    <input type="text" name="name" id="name" value="{{weapon.name}}"
      class=" p-2 border-t-2 border-b-2 placeholder:opacity-50 bg-slate-800 border-teal-600 rounded-md mt-1 mb-3 outline-none focus:border-teal-300"
      required />
  </div>

  <div class="flex flex-col">
    <label for="vr" class="myFont mt-3 text-lg">Version Release</label>
    <input type="text" name="vr" id="vr" value="{{weapon.versionRelease}}"
      class="p-2 border-t-2 placeholder:opacity-50 border-b-2 bg-slate-800 border-teal-600 rounded-md mt-1 mb-3 outline-none focus:border-teal-300"
      required />
  </div>

  <div class="flex flex-col">

    <label for="rarity" class="myFont mt-2 text-lg text-center">Rarity</label>
    <div class="flex justify-center mt-1">

      <input type="radio" class="rarity" name="rarity" id="5" value="5" {{#if (eq weapon.rarity 5)}}checked{{/if}}
        hidden required>
      <label for="5">5 Star</label>

      <input type="radio" class="rarity ml-1 " name="rarity" id="4" value="4" {{#if (eq weapon.rarity
        4)}}checked{{/if}} hidden required>
      <label for="4">4 Star</label>

      <input type="radio" class="rarity ml-1 " name="rarity" id="3" value="3" {{#if (eq weapon.rarity
        3)}}checked{{/if}} hidden required>
      <label for="3">3 Star</label>

      <input type="radio" class="rarity ml-1 " name="rarity" id="2" value="2" {{#if (eq weapon.rarity
        2)}}checked{{/if}} hidden required>
      <label for="2">2 Star</label>

      <input type="radio" class="rarity ml-1 " name="rarity" id="1" value="1" {{#if (eq weapon.rarity
        1)}}checked{{/if}} hidden required>
      <label for="1">1 Star</label>


    </div>
  </div>

</div>



<div class="flex justify-between w-full gap-2">

  <div class="flex flex-col">
    <label for="base" class="myFont mt-3 text-lg">Base ATK</label>
    <input type="text" name="base" id="base" value="{{weapon.base}}"
      class="p-2 border-t-2 placeholder:opacity-50 border-b-2 bg-slate-800 border-teal-600 rounded-md mt-1 mb-3 outline-none focus:border-teal-300"
      required />
  </div>

  <div class="flex flex-col">
    <label for="subStat" class="myFont mt-3 text-lg">Sub-Stat</label>
    <input type="text" name="subStat" id="subStat" value="{{weapon.subStat}}"
      class="p-2 border-t-2 placeholder:opacity-50 border-b-2 bg-slate-800 border-teal-600 rounded-md mt-1 mb-3 outline-none focus:border-teal-300"
      required />
  </div>

  <div class="flex flex-col w-1/3">
  <label for="source" class="myFont mt-3 text-lg">Source</label>
  <input type="text" name="source" id="source" value="{{weapon.source}}"
    class="p-2 border-t-2 placeholder:opacity-50 border-b-2 bg-slate-800 border-teal-600 rounded-md mt-1 mb-3 outline-none focus:border-teal-300"
    required />
</div>
</div>

<label for="desc" class="myFont mt-3 text-lg">Description</label>
<input type="text" name="desc" id="desc" value="{{character.desc}}"
  class="w-full p-2 border-t-2 placeholder:opacity-50 border-b-2 bg-slate-800 border-teal-600 rounded-md mt-1 mb-3 outline-none focus:border-teal-300"
  required />